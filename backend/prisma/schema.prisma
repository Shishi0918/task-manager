// Prisma schema file
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String             @id @default(uuid())
  email              String             @unique
  passwordHash       String             @map("password_hash")
  username           String
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  // Plan type (individual or organization member)
  planType           PlanType           @default(INDIVIDUAL) @map("plan_type")

  // Individual subscription fields (used when planType = INDIVIDUAL)
  stripeCustomerId   String?            @unique @map("stripe_customer_id")
  subscriptionStatus SubscriptionStatus @default(TRIALING) @map("subscription_status")
  subscriptionId     String?            @map("subscription_id")
  trialEndsAt        DateTime?          @map("trial_ends_at")
  currentPeriodEnd   DateTime?          @map("current_period_end")

  // Organization membership (used when planType = ORGANIZATION)
  organizationId     String?            @map("organization_id")
  organization       Organization?      @relation(fields: [organizationId], references: [id])
  role               UserRole           @default(MEMBER)

  tasks              Task[]
  completions        TaskCompletion[]
  templates          TaskTemplate[]
  spotTasks          SpotTask[]
  yearlyTasks        YearlyTask[]
  weeklyTasks        WeeklyTask[]
  dailyTasks         DailyTask[]
  projects           Project[]

  @@map("users")
}

model Organization {
  id                 String             @id @default(uuid())
  name               String
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  // Stripe subscription fields
  stripeCustomerId   String?            @unique @map("stripe_customer_id")
  subscriptionStatus SubscriptionStatus @default(TRIALING) @map("subscription_status")
  subscriptionId     String?            @map("subscription_id")
  trialEndsAt        DateTime?          @map("trial_ends_at")
  currentPeriodEnd   DateTime?          @map("current_period_end")

  // Limits
  maxUsers           Int                @default(10) @map("max_users")

  users              User[]
  invitations        Invitation[]

  @@map("organizations")
}

model Invitation {
  id             String       @id @default(uuid())
  organizationId String       @map("organization_id")
  email          String
  token          String       @unique
  expiresAt      DateTime     @map("expires_at")
  createdAt      DateTime     @default(now()) @map("created_at")

  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([organizationId, email])
  @@map("invitations")
}

enum PlanType {
  INDIVIDUAL
  ORGANIZATION
}

enum UserRole {
  ADMIN
  MEMBER
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  EXPIRED
}

model Task {
  id           String           @id @default(uuid())
  userId       String           @map("user_id")
  name         String
  year         Int
  month        Int
  displayOrder Int              @map("display_order")
  startDate    DateTime?        @db.Date @map("start_date")
  endDate      DateTime?        @db.Date @map("end_date")
  startTime    String?          @map("start_time")  // "HH:MM" format
  endTime      String?          @map("end_time")    // "HH:MM" format
  sourceType   String?          @map("source_type") // "monthly", "yearly", "spot", "weekly", "daily"
  isActive     Boolean          @default(true) @map("is_active")
  isCompleted  Boolean          @default(false) @map("is_completed")
  parentId     String?          @map("parent_id")
  createdAt    DateTime         @default(now()) @map("created_at")
  updatedAt    DateTime         @updatedAt @map("updated_at")

  user         User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent       Task?            @relation("TaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children     Task[]           @relation("TaskHierarchy")
  completions  TaskCompletion[]

  @@map("tasks")
}

model TaskCompletion {
  id          String    @id @default(uuid())
  taskId      String    @map("task_id")
  userId      String    @map("user_id")
  targetDate  DateTime  @db.Date @map("target_date")
  isCompleted Boolean   @default(false) @map("is_completed")
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId, targetDate])
  @@map("task_completions")
}

model TaskTemplate {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  templateName String   @map("template_name")
  taskName     String   @map("task_name")
  displayOrder Int      @map("display_order")
  startDay     Int?     @map("start_day")
  endDay       Int?     @map("end_day")
  startTime    String?  @map("start_time")  // "HH:MM" format
  endTime      String?  @map("end_time")    // "HH:MM" format
  parentId     String?  @map("parent_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   TaskTemplate?  @relation("TaskTemplateHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children TaskTemplate[] @relation("TaskTemplateHierarchy")

  @@unique([userId, templateName, displayOrder])
  @@map("task_templates")
}

model SpotTask {
  id                  String   @id @default(uuid())
  userId              String   @map("user_id")
  name                String
  displayOrder        Int      @map("display_order")
  implementationYear  Int      @map("implementation_year")
  implementationMonth Int      @map("implementation_month")
  startDay            Int?     @map("start_day")
  endDay              Int?     @map("end_day")
  parentId            String?  @map("parent_id")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  user     User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   SpotTask?  @relation("SpotTaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children SpotTask[] @relation("SpotTaskHierarchy")

  @@map("spot_tasks")
}

model YearlyTask {
  id                  String   @id @default(uuid())
  userId              String   @map("user_id")
  name                String
  displayOrder        Int      @map("display_order")
  implementationMonth Int?     @map("implementation_month")
  startDay            Int?     @map("start_day")
  endDay              Int?     @map("end_day")
  parentId            String?  @map("parent_id")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   YearlyTask?  @relation("YearlyTaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children YearlyTask[] @relation("YearlyTaskHierarchy")

  @@map("yearly_tasks")
}

model WeeklyTask {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  name         String
  displayOrder Int      @map("display_order")
  parentId     String?  @map("parent_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user      User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent    WeeklyTask?          @relation("WeeklyTaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children  WeeklyTask[]         @relation("WeeklyTaskHierarchy")
  schedules WeeklyTaskSchedule[]

  @@map("weekly_tasks")
}

model WeeklyTaskSchedule {
  id           String @id @default(uuid())
  weeklyTaskId String @map("weekly_task_id")
  dayOfWeek    Int    @map("day_of_week") // 0=月, 1=火, 2=水, 3=木, 4=金, 5=土, 6=日
  startTime    String @map("start_time")  // "HH:MM" format
  endTime      String @map("end_time")    // "HH:MM" format

  weeklyTask WeeklyTask @relation(fields: [weeklyTaskId], references: [id], onDelete: Cascade)

  @@unique([weeklyTaskId, dayOfWeek])
  @@map("weekly_task_schedules")
}

model DailyTask {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  name         String
  displayOrder Int      @map("display_order")
  startTime    String?  @map("start_time")  // "HH:MM" format
  endTime      String?  @map("end_time")    // "HH:MM" format
  parentId     String?  @map("parent_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user     User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent   DailyTask?  @relation("DailyTaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children DailyTask[] @relation("DailyTaskHierarchy")

  @@map("daily_tasks")
}

model Project {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user    User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  members ProjectMember[]
  tasks   ProjectTask[]

  @@map("projects")
}

model ProjectMember {
  id           String   @id @default(uuid())
  projectId    String   @map("project_id")
  name         String
  color        String   // HEX color code like "#FF5733"
  displayOrder Int      @map("display_order")
  createdAt    DateTime @default(now()) @map("created_at")

  project Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  tasks   ProjectTask[]

  @@map("project_members")
}

model ProjectTask {
  id           String    @id @default(uuid())
  projectId    String    @map("project_id")
  memberId     String?   @map("member_id")
  name         String
  parentId     String?   @map("parent_id")
  startDate    DateTime? @db.Date @map("start_date")
  endDate      DateTime? @db.Date @map("end_date")
  displayOrder Int       @map("display_order")
  isCompleted  Boolean   @default(false) @map("is_completed")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  project  Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  member   ProjectMember? @relation(fields: [memberId], references: [id], onDelete: SetNull)
  parent   ProjectTask?   @relation("ProjectTaskHierarchy", fields: [parentId], references: [id], onDelete: SetNull)
  children ProjectTask[]  @relation("ProjectTaskHierarchy")

  @@map("project_tasks")
}
